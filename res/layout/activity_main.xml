<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelaLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:text="@string/promotion" />

    <Spinner
        android:id="@+id/spinnerPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerPromo"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp"
        android:text="@string/nom" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/buttonEffacer"
        android:completionThreshold="1"
        android:dropDownWidth="match_parent" >

        <requestFocus />
    </AutoCompleteTextView>

    <Button
        android:id="@+id/buttonEffacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/autoCompleteTextView1"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/autoCompleteTextView1"
        android:text="@string/effacer" />

</RelativeLayout>